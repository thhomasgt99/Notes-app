<div class="col-md-4 mx-auto">
	<div class="card">
		<div class="card-header">
			<h3>Edit Note</h3>
		</div>
		<div class="card-body">
			<form action="/notes/edit/{{note.id}}?_method=PUT" method="POST"> {{!--?_method=PUT es para cambiar el metodo puesto por un PUT --}}
				<input type="hidden" name="_method" value="PUT">{{!--campo en blanco requerido por method-override--}}
				<div class="form-group">
					<input type="text" name="title" class="form-control" value="{{note.title}}">
				</div>
				<div class="form-group">
					<textarea name="description" class="form-control">{{note.description}}</textarea>
				</div>
				<div class="form-group">
					<button type="submit" class="btn btn-primary btn-block">
						Save
					</button>
				</div>
			</form>
		</div>
	</div>
</div>